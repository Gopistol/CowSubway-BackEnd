{
    "env": {
        "browser": true,
        "es2021": true,
        "node" : true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error", {
                "singleQuote": true,
                "semi": true,
                "endOfLine": "auto"
            }
        ],
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off"
    }
}
